<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLightDark</item>
        <item name="colorSecondary">@color/colorPrimaryLightDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/colorPrimaryLightDark</item>
        <item name="android:windowBackground">@color/windowBackgroundLight</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorSecondary">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDarkDark</item>
        <item name="android:windowBackground">@color/windowBackgroundDark</item>
    </style>
</resources>
